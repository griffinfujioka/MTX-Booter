#include<stdio.h>

int main()
{
	char name[36]; 

	while(1)
	{
		printf("What is your name?"); 
		scanf("%s", name); 	// Read input into name buffer 
		if(name == null)
		{ 
			printf("Bye bye!\n"); 
			return 1; 
		} 
		else
		{
			printf("\nWelcome, %s!\n", name); 
			name = null; 	// Reset name to null 
		} 
	}
}
